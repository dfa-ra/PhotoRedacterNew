<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@drawable/map_fragment_buttons_background">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/seekbarBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/custom_seekbar_track"
        android:layout_marginTop="3dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="16dp"
        app:shapeAppearanceOverlay="@style/RoundedCorners"/>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/gradient_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="3dp"
        android:layout_marginEnd="16dp"
        app:shapeAppearanceOverlay="@style/RoundedCorners"
        />

    <SeekBar
        android:id="@+id/transparency_seek_bar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:progressDrawable="@drawable/empty_progress"
        android:thumb="@drawable/custom_fill_thumb"
        android:progress="50"/>

</FrameLayout>